<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <environments default="local">
        <environment id="local">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="jdbc/Jedani"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="ru/complitex/jedani/mapper/RegionMapper.xml"/>
        <mapper resource="ru/complitex/jedani/mapper/CityMapper.xml"/>
        <mapper resource="ru/complitex/jedani/mapper/UserMapper.xml"/>
    </mappers>
</configuration>